<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Recon Instruments Center", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Help", help_path %></li>
          <% if signed_in? %>
            <li id="fat-menu" class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#"> Doable <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Feedback", bugs_path %></li>
                <!--<li><%= link_to "My bugs", '#' %></li>
                <li class="divider"></li>
                <li><%= link_to "Create", bugreport_path %></li>-->
              </ul>
            </li>
            <% if current_user.authouser? || current_user.intuser? || current_user.admin? %>
              <li><%= link_to "Users", users_path %></li>
            <% end %>
            <% if current_user.authouser? || current_user.intuser? %>
              <li id="fat-menu" class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#"> Bugs <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Bugs list", bugs_path %></li>
                  <li><%= link_to "My bugs", '#' %></li>
                  <li class="divider"></li>
                  <li><%= link_to "Create", bugreport_path %></li>
                </ul>
              </li>
            <% end %>
            <li id="fat-menu" class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#"> Account <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>