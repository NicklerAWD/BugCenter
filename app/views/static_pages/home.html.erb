<% provide(:title, "Home") %>
<% if signed_in? %>
  <!-- if the user is signed-in -->
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>  
<% else %>
  <!-- If the user si not sign-in -->
  <div class="center hero-unit">
    <h1>Welcome to the <br/> Recon Instruments Center</h1>

    <h2>
      You can find some report here and also report some bugs
    </h2>

    <%= link_to "Sign in now!", signin_path, class: "btn btn-large btn-primary" %> <br/>
    If you are not registered, please <%= link_to "sign up.", signup_path%>
  </div>

  <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %> 